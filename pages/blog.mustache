<!doctype html>
<html>
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width" />

  <title>Metafizzy blog</title>

</head>
<body>

<div class="container">
  <p><a href="/blog">Metafizzy blog</a></p>
</div>

<div class="container">
  {{#each pagePosts}}
    {{> post}}
  {{/each}}

  <nav class="pagination">
    {{#if previousPage}}
      <a class="pagination__prevoius" href="{{previousPage.url}}">Previous {{previousPage.index}}</a>
    {{/if}}
    <span class="pagination__current">Page {{currentPage}} of {{totalPages}}</span>
    {{#if nextPage}}
      <a class="pagination__next" href="/blog/page{{nextPage}}">Next {{nextPage}}</a>
    {{/if}}
  </nav>

</div>

</body>
</html>
